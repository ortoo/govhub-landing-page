      .inner-page.row
        .col-md-3
          img.customer(src=require('./images/customers/stockport.png'), alt='Stockport Borough Council')
        .col-md-3
          img.customer(src=require('./images/customers/westminster.png'), alt='Diocese of Westminster Multi-Academy Trust')
        .col-md-3
          img.customer(src=require('./images/customers/dneat.png'), alt='Diocese of Norwich Multi-Academy Trust')
